@model IEnumerable<PakBus.Models.Bus>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1>Available Buses</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Bus Number</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Departure City</th>
                <th>Arrival City</th>
                <th>Fare</th>
                <th>Seats Available</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bus in Model)
            {
                <tr>
                    <td>@bus.BusNumber</td>
                    <td>@bus.DepartureTime</td>
                    <td>@bus.ArrivalTime</td>
                    <td>@bus.DepartureCity</td>
                    <td>@bus.ArrivalCity</td>
                    <td>@bus.Fare</td>
                    <td>@bus.SeatsAvailable</td>
                </tr>
            }
        </tbody>
    </table>
</div>